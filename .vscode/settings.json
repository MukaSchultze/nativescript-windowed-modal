{
    "files.exclude": {
        "**/*.js": {
            "when": "$(basename).ts",
        },
        "**/*.map": {
            "when": "$(basename)",
        },
        "**/*.css": {
            "when": "$(basename).scss"
        },
        "**/node_modules/": true,
        "demo/platforms": true
    },
    "typescript.tsdk": "node_modules\\typescript\\lib",
    "typescript.preferences.quoteStyle": "double",
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "tslint.configFile": "./tslint.json",
    "tslint.autoFixOnSave": true,
    "tslint.enable": true
}
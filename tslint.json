{
    "extends": "tslint:latest",
    "linterOptions": {
        "exclude": [
            "src/node_modules",
            "demo/node_modules",
            "demo-ng/node_modules"
        ]
    },
    "rules": {
        "max-line-length": false,
        "class-name": true,
        "no-submodule-imports": false,
        "interface-name": false,
        "no-reference": false,
        "no-console": false,
        "no-this-assignment": false,
        "no-var-requires": false,
        "object-literal-sort-keys": false,
        "no-implicit-dependencies": false,
        "no-object-literal-type-assertion": false,
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "comment-format": [
            true,
            "check-space"
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "no-consecutive-blank-lines": [
            true,
            1
        ],
        "member-access": false,
        "max-classes-per-file": false,
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-internal-module": true,
        "no-trailing-whitespace": true,
        "no-var-keyword": true,
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [
            true,
            "double"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [
            true,
            "ban-keywords"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    }
}